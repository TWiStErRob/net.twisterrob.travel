<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.twisterrob.blt.android">

	<uses-feature
		android:glEsVersion="0x00020000"
		android:required="true" />

	<permission
		android:name="net.twisterrob.blt.android.permission.MAPS_RECEIVE"
		android:protectionLevel="signature" />
	<uses-permission android:name="net.twisterrob.blt.android.permission.MAPS_RECEIVE" />
	<!-- App, Maps API v2 required -->
	<uses-permission android:name="android.permission.INTERNET" />
	<!-- Maps API v2 required -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<!-- App, Maps API v2 required -->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<!-- Maps API v2 required -->
	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
	<!-- Maps API v2 recommended -->
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<!-- App, Maps API v2 recommended -->

	<application
		android:name="net.twisterrob.blt.android.App"
		android:label="@string/app_name"
		android:icon="@drawable/ic_launcher"
		android:allowBackup="true"
		android:largeHeap="true"
		android:theme="@style/Theme.Default">

		<uses-library
			android:name="com.google.android.maps"
			android:required="false" />

		<!-- See <meta-data android:name="com.google.android.maps.v2.API_KEY" in variant folders -->
		<meta-data
			android:name="com.google.android.gms.version"
			android:value="@integer/google_play_services_version" />

		<provider
			android:name=".ui.StationSuggestProvider"
			android:authorities="${applicationId}.suggest_station"
			android:exported="false"
			android:syncable="false" />

		<activity
			android:name=".ui.activity.main.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<meta-data
				android:name="android.app.default_searchable"
				android:value="net.twisterrob.blt.android.ui.activity.StationListActivity" />
		</activity>

		<activity
			android:name=".ui.activity.StatusActivity"
			android:label="@string/launcher_line_status">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.blt.android.ui.activity.main.MainActivity" />
		</activity>

		<activity
			android:name=".ui.activity.PredictionSummaryActivity"
			android:label="@string/launcher_prediction_summary">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.blt.android.ui.activity.StatusActivity" />
		</activity>

		<activity
			android:name=".ui.activity.StationListActivity"
			android:label="@string/launcher_station_list">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.blt.android.ui.activity.main.MainActivity" />
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable_stations_list" />
		</activity>

		<activity
			android:name=".ui.activity.StationInfoActivity"
			android:label="@string/launcher_station_info">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.blt.android.ui.activity.StationListActivity" />
		</activity>

		<activity
			android:name=".ui.activity.StationMapActivity"
			android:label="@string/launcher_station_map">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.blt.android.ui.activity.main.MainActivity" />
		</activity>

		<activity
			android:name=".ui.activity.StationMapsV2Activity"
			android:label="@string/launcher_station_map_v2">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.blt.android.ui.activity.main.MainActivity" />
		</activity>

		<activity
			android:name=".ui.activity.PostCodesActivity"
			android:label="@string/launcher_postcode_map">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.blt.android.ui.activity.main.MainActivity" />
		</activity>

		<activity
			android:name=".ui.activity.DistanceMapActivity"
			android:label="@string/launcher_distance_map">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="net.twisterrob.blt.android.ui.activity.main.MainActivity" />
		</activity>

	</application>
</manifest>
