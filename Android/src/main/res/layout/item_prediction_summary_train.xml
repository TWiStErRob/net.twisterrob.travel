<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="4dip"
	android:paddingRight="4dip"
	android:background="#000"
	tools:ignore="Overdraw"
	>

	<TextView
		android:id="@+id/prediction_train_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="2dip"
		android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
		android:layout_alignParentStart="true"
		android:textColor="#fc0"
		android:textIsSelectable="true"
		android:textSize="14sp"
		tools:text="Train Destination"
		/>

	<TextView
		android:id="@+id/prediction_train_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@+id/prediction_train_name"
		android:layout_toStartOf="@+id/prediction_train_time"
		android:gravity="start"
		android:textColor="#a90"
		android:textIsSelectable="true"
		android:textSize="12sp"
		tools:text="Detailed location of the train carriages."
		/>

	<TextView
		android:id="@+id/prediction_train_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:gravity="end"
		android:textColor="#fc0"
		android:textIsSelectable="true"
		android:textSize="14sp"
		android:textStyle="bold"
		tools:text="12:34"
		/>
</RelativeLayout>
