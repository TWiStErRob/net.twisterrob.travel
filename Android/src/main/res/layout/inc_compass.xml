<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout$compass_header"
	android:layout_width="70dp"
	android:layout_height="70dp"
	tools:layout_width="104dp"
	tools:layout_height="104dp"
	android:gravity="start"
	tools:ignore="RtlHardcoded,NegativeMargin,SpUsage"
	tools:targetApi="HONEYCOMB"
	>
	<ToggleButton
		android:id="@+id/button$compass_center"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_margin="7dp"
		android:layout_centerInParent="true"
		android:background="@drawable/compass_center"
		android:textOn="O"
		android:textOff="O"
		android:textSize="16sp"
		/>
	<ToggleButton
		android:id="@+id/button$compass_north"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_marginTop="-35dp"
		android:layout_above="@+id/button$compass_center"
		android:layout_centerHorizontal="true"
		android:background="@drawable/compass_triangle"
		android:textOn="N"
		android:textOff="N"
		android:gravity="bottom|center_horizontal"
		android:textSize="10dp"
		/>
	<ToggleButton
		android:id="@+id/button$compass_south"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_marginBottom="-35dp"
		android:layout_below="@+id/button$compass_center"
		android:layout_centerHorizontal="true"
		android:background="@drawable/compass_triangle"
		android:textOn="S"
		android:textOff="S"
		android:gravity="bottom|center_horizontal"
		android:rotation="180"
		android:textSize="10dp"
		/>
	<ToggleButton
		android:id="@+id/button$compass_west"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/button$compass_center"
		android:background="@drawable/compass_triangle"
		android:textOn="W"
		android:textOff="W"
		android:gravity="bottom|center_horizontal"
		android:rotation="-90"
		android:textSize="10dp"
		/>
	<ToggleButton
		android:id="@+id/button$compass_east"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/button$compass_center"
		android:background="@drawable/compass_triangle"
		android:textOn="E"
		android:textOff="E"
		android:gravity="bottom|center_horizontal"
		android:rotation="90"
		android:textSize="10dp"
		/>
</RelativeLayout>
