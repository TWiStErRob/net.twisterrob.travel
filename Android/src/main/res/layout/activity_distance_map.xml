<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.ClickThroughDrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/drawer"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:openDrawer="end"
	tools:context=".ui.activity.DistanceMapActivity"
	>
	<android.support.design.widget.CoordinatorLayout
		xmlns:coordinator="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<fragment
			xmlns:map="http://schemas.android.com/apk/res-auto"
			android:id="@+id/map"
			class="com.google.android.gms.maps.SupportMapFragment"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:layout="@layout/inc_empty"
			app:layout_collapseMode="parallax"
			app:layout_scrollFlags="scroll|enterAlways"
			map:mapType="normal"
			map:uiCompass="true"
			map:uiZoomControls="false"
			map:uiMapToolbar="false"
			map:uiRotateGestures="true"
			map:uiScrollGestures="true"
			map:uiTiltGestures="true"
			map:uiZoomGestures="true"
			/>
		<!-- TODO maxWidth simply doesn't work, so it's hardcoded -->
		<!-- CONSIDER https://medium.com/google-developers/intercepting-everything-with-coordinatorlayout-behaviors-8c6adc140c26#4d59 -->
		<android.support.v7.widget.CardView
			xmlns:toolbar="http://schemas.android.com/apk/res-auto"
			android:id="@+id/toolbar_container"
			android:layout_width="340dp"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="0dp"
			android:maxWidth="360dp"
			>
			<android.support.design.widget.AppBarLayout
				android:id="@+id/app_bar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
				android:visibility="visible"
				toolbar:expanded="false"
				>
				<android.support.design.widget.CollapsingToolbarLayout
					android:id="@+id/toolbar_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					toolbar:contentScrim="?attr/colorPrimary"
					toolbar:layout_scrollFlags="scroll|exitUntilCollapsed"

					>
					<android.support.v7.widget.Toolbar
						android:id="@+id/toolbar"
						android:layout_width="match_parent"
						android:layout_height="?attr/actionBarSize"
						android:fitsSystemWindows="true"
						toolbar:layout_collapseMode="pin"
						toolbar:title="@string/launcher_distance_map"
						toolbar:popupTheme="@style/ThemeOverlay.AppCompat.Light"
						>
						<fragment
							android:id="@+id/place_autocomplete_fragment"
							class="com.google.android.gms.location.places.ui.SupportPlaceAutocompleteFragment"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:layout="@layout/inc_empty"
							/>
					</android.support.v7.widget.Toolbar>
				</android.support.design.widget.CollapsingToolbarLayout>
			</android.support.design.widget.AppBarLayout>
		</android.support.v7.widget.CardView>

		<android.support.design.widget.FloatingActionButton
			xmlns:fab="http://schemas.android.com/apk/res-auto"
			android:id="@+id/fab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|end"
			android:layout_marginLeft="-12dp"
			android:layout_marginStart="-12dp"
			android:layout_marginTop="-18dp"
			android:layout_marginRight="12dp"
			android:layout_marginEnd="12dp"
			android:layout_marginBottom="12dp"
			android:src="@android:drawable/ic_menu_preferences"
			fab:fabSize="normal"
			fab:useCompatPadding="true"
			/>

		<fragment
			android:id="@+id/distance_bottom_sheet"
			class="net.twisterrob.blt.android.ui.activity.NearestStationsFragment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:layout="@layout/fragment_distance_nearest"
			coordinator:behavior_hideable="true"
			coordinator:behavior_skipCollapsed="true"
			coordinator:layout_behavior="@string/bottom_sheet_behavior"
			coordinator:behavior_peekHeight="160dp"
			/>
	</android.support.design.widget.CoordinatorLayout>

	<fragment
		android:id="@+id/distance_drawer"
		class="net.twisterrob.blt.android.ui.activity.DistanceOptionsFragment"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="end"
		android:fitsSystemWindows="true"
		tools:layout_marginTop="@android:dimen/status_bar_height"
		tools:layout="@layout/fragment_distance_options"
		/>
</android.support.v4.widget.ClickThroughDrawerLayout>
