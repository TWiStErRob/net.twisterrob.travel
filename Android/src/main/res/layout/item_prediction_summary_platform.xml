<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	>

	<TextView
		android:id="@+id/prediction_platform_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="3dip"
		android:paddingRight="3dip"
		android:paddingEnd="3dip"
		android:paddingBottom="3dip"
		android:textIsSelectable="true"
		android:textSize="12sp"
		android:textStyle="bold"
		tools:text="Somebound - Platform 0: 99 trains are approaching"
		/>

	<TextView
		android:id="@+id/prediction_platform_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
		android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"
		android:gravity="start"
		android:textIsSelectable="true"
		android:textSize="12sp"
		tools:text="Description of the platform, probably disruptions go here. Most of the time this is empty."
		/>

</LinearLayout>
