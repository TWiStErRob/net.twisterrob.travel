<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppTheme.Default" parent="@style/Theme.AppCompat.Light">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
	</style>

	<style name="AppTheme.NoTitle" parent="@style/AppTheme.Default">
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="AppTheme.NoActionBar" parent="@style/AppTheme.Default">
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.FullScreen" parent="@style/AppTheme.Default">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="AppTheme.AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
	</style>
</resources>
