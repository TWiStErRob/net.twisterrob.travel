<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="Theme.Default" parent="@style/Theme.AppCompat.Light">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
	</style>

	<style name="Theme.NoTitle" parent="@style/Theme.Default">
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="Theme.NoActionBar" parent="@style/Theme.Default">
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.FullScreen" parent="@style/Theme.Default">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

</resources>
