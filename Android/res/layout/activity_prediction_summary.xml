<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE layout>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<include
		android:id="@+id/layout$common_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		layout="@layout/common_header" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/layout$common_header"
		android:layout_above="@+id/layout$common_footer"
		android:orientation="vertical">
		<RelativeLayout
			android:id="@+id/layout$compass_header"
			android:layout_width="fill_parent"
			android:layout_height="70dp"
			android:layout_alignParentTop="true"
			android:gravity="left">
			<ToggleButton
				android:id="@+id/button$compass_center"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_margin="7dp"
				android:layout_centerInParent="true"
				android:background="@drawable/compass_center"
				android:textOn="O"
				android:textOff="O"
				android:textSize="16sp" />
			<ToggleButton
				android:id="@+id/button$compass_north"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_above="@+id/button$compass_center"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="-35dp"
				android:background="@drawable/compass_triangle"
				android:gravity="bottom|center_horizontal"
				android:textOn="N"
				android:textOff="N"
				android:textSize="10sp" />
			<ToggleButton
				android:id="@+id/button$compass_south"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_below="@+id/button$compass_center"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="-35dp"
				android:background="@drawable/compass_triangle"
				android:gravity="bottom|center_horizontal"
				android:rotation="180"
				android:textOn="S"
				android:textOff="S"
				android:textSize="10sp" />
			<ToggleButton
				android:id="@+id/button$compass_west"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@+id/button$compass_center"
				android:background="@drawable/compass_triangle"
				android:gravity="bottom|center_horizontal"
				android:rotation="-90"
				android:textOn="W"
				android:textOff="W"
				android:textSize="10sp" />
			<ToggleButton
				android:id="@+id/button$compass_east"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@+id/button$compass_center"
				android:background="@drawable/compass_triangle"
				android:gravity="bottom|center_horizontal"
				android:rotation="90"
				android:textOn="E"
				android:textOff="E"
				android:textSize="10sp" />
		</RelativeLayout>
		<TextView
			android:id="@+id/text_status"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:layout_marginRight="@dimen/margin_activity"
			android:layout_marginEnd="@dimen/margin_activity"
			tools:text="Last updated: today"
			/>
		<android.support.v4.widget.SwipeRefreshLayout
			android:id="@+id/layout$wrapper"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="1">
			<FrameLayout
				android:layout_width="match_parent" 
				android:layout_height="match_parent">
			<ExpandableListView
				android:id="@android:id/list"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
			<TextView
				android:id="@android:id/empty"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_gravity="center_horizontal"
				android:layout_margin="8dp"
				android:text="@string/demo_long"
				android:textColor="#ff0000"
				android:textSize="16sp" />
			</FrameLayout>
		</android.support.v4.widget.SwipeRefreshLayout>
	</LinearLayout>

	<include
		android:id="@+id/layout$common_footer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		layout="@layout/common_footer" />

</RelativeLayout>
