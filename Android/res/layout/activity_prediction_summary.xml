<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE layout>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<include
		android:id="@+id/layout_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		layout="@layout/common_header" />

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/layout_header"
		android:layout_above="@+id/layout_footer">
		<RelativeLayout
			android:id="@+id/asdfheader"
			android:layout_width="fill_parent"
			android:layout_height="70dp"
			android:layout_alignParentTop="true"
			android:gravity="left">
			<ToggleButton
				android:id="@+id/button_compass_center"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_margin="7dp"
				android:layout_centerInParent="true"
				android:background="@drawable/compass_center"
				android:textOn="O"
				android:textOff="O"
				android:textSize="16sp" />
			<ToggleButton
				android:id="@+id/button_compass_north"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_above="@+id/button_compass_center"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="-35dp"
				android:background="@drawable/compass_triangle"
				android:gravity="bottom|center_horizontal"
				android:textOn="N"
				android:textOff="N"
				android:textSize="10sp" />
			<ToggleButton
				android:id="@+id/button_compass_south"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_below="@+id/button_compass_center"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="-35dp"
				android:background="@drawable/compass_triangle"
				android:gravity="bottom|center_horizontal"
				android:rotation="180"
				android:textOn="S"
				android:textOff="S"
				android:textSize="10sp" />
			<ToggleButton
				android:id="@+id/button_compass_west"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@+id/button_compass_center"
				android:background="@drawable/compass_triangle"
				android:gravity="bottom|center_horizontal"
				android:rotation="-90"
				android:textOn="W"
				android:textOff="W"
				android:textSize="10sp" />
			<ToggleButton
				android:id="@+id/button_compass_east"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@+id/button_compass_center"
				android:background="@drawable/compass_triangle"
				android:gravity="bottom|center_horizontal"
				android:rotation="90"
				android:textOn="E"
				android:textOff="E"
				android:textSize="10sp" />
		</RelativeLayout>
		<com.handmark.pulltorefresh.library.PullToRefreshExpandableListView
			android:id="@+id/wrapper"
			android:layout_below="@+id/asdfheader"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
	</RelativeLayout>

	<include
		android:id="@+id/layout_footer"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		layout="@layout/common_footer" />

</RelativeLayout>