<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.ClickThroughDrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/view__range__drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:openDrawer="end"
	tools:context="net.twisterrob.blt.android.ui.activity.RangeMapActivity"
	>
	<androidx.coordinatorlayout.widget.CoordinatorLayout
		xmlns:coordinator="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<include
			layout="@layout/inc_map"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_collapseMode="parallax"
			app:layout_scrollFlags="scroll|enterAlways"
			/>
		<!-- TODO maxWidth simply doesn't work, so it's hardcoded -->
		<!-- CONSIDER https://medium.com/google-developers/intercepting-everything-with-coordinatorlayout-behaviors-8c6adc140c26#4d59 -->
		<androidx.cardview.widget.CardView
			xmlns:toolbar="http://schemas.android.com/apk/res-auto"
			android:id="@+id/view__range__toolbar_container"
			android:layout_width="340dp"
			android:layout_height="wrap_content"
			android:layout_gravity="top|center_horizontal"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="0dp"
			android:maxWidth="360dp"
			>
			<com.google.android.material.appbar.AppBarLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
				android:visibility="visible"
				toolbar:expanded="false"
				>
				<com.google.android.material.appbar.CollapsingToolbarLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					toolbar:contentScrim="?attr/colorPrimary"
					toolbar:layout_scrollFlags="scroll|exitUntilCollapsed"

					>
					<androidx.appcompat.widget.Toolbar
						android:id="@+id/view__range__toolbar"
						android:layout_width="match_parent"
						android:layout_height="?attr/actionBarSize"
						android:fitsSystemWindows="true"
						toolbar:layout_collapseMode="pin"
						toolbar:title="@string/range__title"
						toolbar:popupTheme="@style/ThemeOverlay.AppCompat.Light"
						>
						<androidx.fragment.app.FragmentContainerView
							android:id="@+id/view__range__search"
							android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							tools:layout="@layout/inc_empty"
							/>
					</androidx.appcompat.widget.Toolbar>
				</com.google.android.material.appbar.CollapsingToolbarLayout>
			</com.google.android.material.appbar.AppBarLayout>
		</androidx.cardview.widget.CardView>

		<com.google.android.material.floatingactionbutton.FloatingActionButton
			xmlns:fab="http://schemas.android.com/apk/res-auto"
			android:id="@+id/view__range__fab"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@android:drawable/ic_menu_preferences"
			android:tint="?colorAccent"
			fab:fabSize="mini"
			fab:useCompatPadding="true"
			fab:backgroundTint="?colorPrimary"
			android:contentDescription="@string/range__config__title"
			coordinator:layout_anchor="@+id/view__range__bottom_sheet"
			coordinator:layout_anchorGravity="top|end"
			/>

		<!-- peekHeight = actionBarSize (56dp) + 1.5 * item_station height (~40dp) -->
		<androidx.fragment.app.FragmentContainerView
			android:id="@+id/view__range__bottom_sheet"
			android:name="net.twisterrob.blt.android.ui.activity.RangeNearestFragment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:elevation="4dp"
			tools:layout="@layout/fragment_range_nearest"
			coordinator:behavior_hideable="true"
			coordinator:behavior_skipCollapsed="false"
			coordinator:layout_behavior="@string/bottom_sheet_behavior"
			coordinator:behavior_peekHeight="116dp"
			/>

	</androidx.coordinatorlayout.widget.CoordinatorLayout>

	<androidx.fragment.app.FragmentContainerView
		android:id="@+id/view__range__drawer"
		android:name="net.twisterrob.blt.android.ui.activity.RangeOptionsFragment"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="end"
		android:fitsSystemWindows="true"
		android:maxWidth="320dp"
		tools:layout_marginTop="@android:dimen/status_bar_height"
		tools:layout="@layout/fragment_range_options"
		/>
</androidx.drawerlayout.widget.ClickThroughDrawerLayout>
